{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.14.2/.schema/devbox.schema.json",
  "packages": [
    "act@latest",
    "envsubst@latest",
    "gh@latest",
    "go-task@latest",
    "go@latest",
    "gum@latest",
    "jq@latest",
    "k9s@latest",
    "kind@latest",
    "kluctl@latest",
    "ko@latest",
    "kubectl@latest",
    "kubectx@latest",
    "kubent@latest",
    "kubernetes-helm@latest",
    "kustomize@latest",
    "nodejs_23@latest",
    "oras@latest",
    "path:gcloud#google-cloud-sdk",
    "tilt@latest",
    "yq-go@latest",
    "uv@latest",
    "python@3.13",
    "trufflehog@latest",
    "pre-commit@latest",
    "hadolint@latest",
    "yamllint@latest",
    "markdownlint-cli@latest"
